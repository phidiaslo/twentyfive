<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.button :button, class: "btn btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin right-5'></i> Please wait..."} %>
  </div>
<% end %>
