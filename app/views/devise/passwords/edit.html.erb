<% title 'Change Password' %>
<% noindex %>
<div class="container">
<div class="col-md-6 col-md-offset-3 panel panel-default margin-top-40">
  <div class="panel-body">
    <div class="section-divider">
      <h1>Change Your Password?</h1>
      <p>Please enter and confirm your new password.</p>
    </div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-group">
    <%= f.input :password, label: "New password", required: true, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.button :button, "Change my password", class: "btn btn-smaller btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin right-5'></i> Please wait..."} %>
  </div>
<% end %>

</div>
</div>
</div>