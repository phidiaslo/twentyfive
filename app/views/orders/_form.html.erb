<%= simple_form_for([@gig, @order]) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :name, label: "Full Name", placeholder: "John Smith", input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :email, label: false, placeholder: "Email Address", input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :address_one, label: "Billing Address", placeholder: "Address Line 1", input_html: {class: "form-control input-sm"} %>
  </div>
  
  <div class="form-group">
    <%= f.input :address_two, label: false, placeholder: "Address Line 2", input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :zipcode, label: false, placeholder: "zipcode", input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :city, label: false, placeholder: "City", input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :state, label: false, placeholder: "State", input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :country, label: false, priority: [ "Malaysia" ], input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group remark-box">
    <%= f.input :remark, label: "Order Notes", placeholder: "Enter special instructions for the seller. This is optional", input_html: {rows: 5, class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :status, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.button :button, "Save Changes", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin right-5'></i> Please wait..."} %>
  </div>
<% end %>
