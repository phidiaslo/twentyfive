<% title 'Images' %>
<% noindex %>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="gig-container-alt">
        <div class="button-bar">
          <h1>Images</h1>
        </div>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Gig</th>
              <th>Graphic</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @images.each do |image| %>
              <tr>
                <td><%= image.gig_id %></td>
                <td><%= image_tag image.graphic.url(:thumb) %></td>
                <td><%= link_to 'Show', image %></td>
                <td><%= link_to 'Edit', edit_image_path(image) %></td>
                <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <center><%= paginate @images %></center>
      </div>
    </div>
    <div class="col-md-3 right-sidebar">
      <%= render 'dashboard/sidebar' %>
    </div>
  </div>
</div>
