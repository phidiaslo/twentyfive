<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Gig</th>
      <th>User</th>
      <th>Subject</th>
      <th>Body</th>
      <th>Communication rating</th>
      <th>Service rating</th>
      <th>Recommend rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.gig_id %></td>
        <td><%= review.user_id %></td>
        <td><%= review.subject %></td>
        <td><%= review.body %></td>
        <td><%= review.communication_rating %></td>
        <td><%= review.service_rating %></td>
        <td><%= review.recommend_rating %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
