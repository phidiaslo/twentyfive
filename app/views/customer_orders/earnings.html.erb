<% title 'View Incomes' %>
<% noindex %>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="gig-container-alt">
        <div class="button-bar">
          <h1>Earnings</h1>
        </div>

        <table class="table">
          <thead>
            <tr>
              <th>DATE</th>
              <th>BUYER</th>
              <th>SERVICE</th>
              <th>STATUS</th>
              <th>EARNED</th>
            </tr>
          </thead>

          <tbody>
          <% @gigs.each do |gig| %>
            <% @customer_orders.where(gig_id: gig).each do |customer_order| %>
              <tr>
                <td>
                  <%= link_to "Order ##{customer_order.id}", gig_customer_order_path(gig, customer_order) %>
                  <span class="next-line"><%= local_time_ago(customer_order.purchased_at, '%d %b %Y at %l:%M %p') %></span>
                </td>
                <td>
                  <%= link_to "#{customer_order.gig.user.username}", user_path(customer_order.buyer), target: "_blank" %>
                </td>
                <td>
                  <span><%= link_to "#{customer_order.gig.gig_title}", gig, target: "_blank" %></span>
                </td>
                <td><%= customer_order.status %></td>
                <td>
                   <span class="green-text">RM20.00</span>
                </td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      <center><%= paginate @customer_orders %></center>
      </div>
    </div>
    <div class="col-md-3 right-sidebar">
      <%= render 'dashboard/sidebar' %>
    </div>
  </div>
</div>