<% title 'Manage Orders' %>
<% noindex %>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="gig-container-alt">
        <div class="button-bar">
          <h1>Manage Orders</h1>
        </div>

        <table class="table">
          <thead>
            <tr>
              <th>DATE</th>
              <th>BUYER</th>
              <th>SERVICE</th>
              <th>STATUS</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
          <% @gigs.each do |gig| %>
            <% @customer_orders.where(gig_id: gig).each do |order| %>
              <tr>
                <td>
                  <%= link_to "Order ##{order.id}", gig_customer_order_path(gig, order) %>
                  <span class="next-line"><%= local_time_ago(order.purchased_at, '%d %b %Y at %l:%M %p') %></span>
                </td>
                <td>
                  <%= link_to "#{order.gig.user.username}", user_path(order.buyer), target: "_blank" %>
                </td>
                <td>
                  <span><%= link_to "#{order.gig.gig_title}", gig, target: "_blank" %></span>
                </td>
                <td><%= order.status %></td>
                <td>
                   <%= form_tag edit_customer_order_status_path(id: order) do %>
                      <% if order.status == 'Pending' %>
                        <%= button_tag "Mark as In Progress", name: :commit, value: "Pending", class: "btn btn-status full-width" %>
                      <% elsif order.status == 'In Progress' %>
                        <%= button_tag "Mark as Delivered", name: :commit, value: "In Progress", class: "btn btn-status full-width" %>
                      <% elsif order.status == 'Delivered' %>
                        Awaiting Confirmation
                      <% else order.status == 'Completed' %>
                        Awaiting <span class="green-text">Review</span>
                      <% end %>
                   <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      <center><%= paginate @customer_orders %></center>
      </div>
    </div>
    <div class="col-md-3 right-sidebar">
      <%= render 'dashboard/sidebar' %>
    </div>
  </div>
</div>