<%= simple_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= image_tag @user.avatar.url(:thumb) %> 
  <label>Profile Picture</label>
  <div class="form-group">
    <%= f.input :avatar, label: false, input_html: {class: "upload-new-avatar"} %>
  </div>
  
  <div class="form-group">
    <label>Username</label>
    <%= f.input :username, label: false, disabled: true, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <label>Full Name</label>
    <%= f.input :name, label: false, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <label>About</label> <small>This is where you tell people about yourself. If you're a seller, this will be helpful</small>
    <%= f.input :description, label: false, input_html: {rows: 5, class: "form-control input-sm"} %>
  </div>
  <br>
  <div class="form-group">
    <label>Billing Address</label> <small>Entering your address will make your life easier when buying.</small>
    <%= f.input :address_one, label: false, placeholder: "Address Line 1", input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :address_two, label: false, placeholder: "Address Line 2", input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :zipcode, label: false, placeholder: "Poscode", input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :city, label: false, placeholder: "City", input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :state, label: false, placeholder: "State", input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :country, label: false, priority: [ "Malaysia" ], input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.button :button, "Save Changes", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin right-5'></i> Please wait..."} %>
  </div>
<% end %>